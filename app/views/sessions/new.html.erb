<%= render 'shared/page_title', title: "Log in" %>

<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
		<div class="form-group">
			<div class="control-label col-md-2">
					<%= f.label :email, "Email:" %>
			</div>
			<div class="col-md-8">
				<%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
			</div>
		</div>
		<div class="form-group">
			<div class="control-label col-md-2">
				<%= f.label :password, "Password:" %>
			</div>
			<div class="col-md-8">
				<%= f.password_field :password, placeholder: "Enter password", class: "form-control" %> 
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<%= f.submit "Log in", class: "btn btn-warning btn-primary btn-lg btn-xlarge btn-color" %>
			</div>
		</div>
	<% end %>
	<div class="center index-link">
		[ <%= link_to "Don't have an account? Sign up here", signup_path %> ]
	</div>